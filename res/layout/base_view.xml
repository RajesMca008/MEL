<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/text_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/llLeftMenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/ivMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/menu_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/base_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/morgans_logo_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTopTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBody"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <!-- slide menu layout -->

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

        <!-- android:layout_gravity="start" -->

        <LinearLayout
            android:layout_marginTop="40dp"
            android:id="@+id/llGroup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/text_blue"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/tvCalender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawablePadding="15dp"
                android:padding="10dp"
                android:text="Calendar"
                android:textColor="@color/text_white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tvSuppliers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawablePadding="15dp"
                android:padding="10dp"
                android:text="Suppliers"
                android:textColor="@color/text_white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tvMaterials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawablePadding="15dp"
                android:padding="10dp"
                android:text="Materials"
                android:textColor="@color/text_white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tvMelForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawablePadding="15dp"
                android:padding="10dp"
                android:text="MEL Forms"
                android:textColor="@color/text_white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tvOthers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawablePadding="15dp"
                android:padding="10dp"
                android:text="Others"
                android:textColor="@color/text_white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tvMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawablePadding="15dp"
                android:padding="10dp"
                android:text="More"
                android:textColor="@color/text_white"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>