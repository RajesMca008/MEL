<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/text_blue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/base_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/morgans_logo_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTopTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <!-- job details list -->

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="7"
                            android:background="@drawable/shape_white_spinner_gray"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tvJobs_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:text="Update Job Status"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/tvJobs_addr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:text="Update Job Status"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/tvJobs_phno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:autoLink="phone"
                                android:text="Update Job Status"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/tvJobs_sitecontact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:text="Update Job Status"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/tvJobs_jobid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:text="Update Job Status"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </ScrollView>
                    <!-- short desp -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="8"
                        android:background="@drawable/shape_white_spinner_gray"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Short description"
                            android:textColor="@color/text_headlins"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <EditText
                                    android:id="@+id/edt_shot_job_desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/shape_white_edittext"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:gravity="top"
                                    android:hint="" >
                                </EditText>
                            </RelativeLayout>
                        </ScrollView>
                    </LinearLayout>

                    <!-- 3 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="7"
                        android:background="@drawable/shape_white_spinner_gray"
                        android:orientation="vertical" >

                        <!-- 2.1 -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <TextView
                                    android:id="@+id/textView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:text="Update Job Status"
                                    android:textColor="@color/text_headlins"
                                    android:textSize="22dp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>

                        <!-- 2.2 -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal" >

                                <!-- 2.2. 1 -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" >

                                        <Button
                                            android:id="@+id/btn_jobdetails_startjob"
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_margin="2dp"
                                            android:background="@color/text_blue"
                                            android:text="Start Job"
                                            android:textColor="@color/text_white"
                                            android:textSize="18dp" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <!-- 2.2.2 -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" >

                                        <Button
                                            android:id="@+id/bt2"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_margin="2dp"
                                            android:background="@color/text_blue"
                                            android:text="Job in Progress"
                                            android:textColor="@color/text_white"
                                            android:textSize="18dp" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <!-- 2.2.3 -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" >

                                        <Button
                                            android:id="@+id/bt3"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_margin="2dp"
                                            android:background="@color/text_blue"
                                            android:text="Not Complete Reshedule"
                                            android:textColor="@color/text_white"
                                            android:textSize="18dp" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <!-- 2.2.4 -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" >

                                        <Button
                                            android:id="@+id/bt4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_margin="2dp"
                                            android:background="@color/text_blue"
                                            android:text="Job Complete"
                                            android:textColor="@color/text_white"
                                            android:textSize="18dp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 4 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="8"
                        android:background="@drawable/shape_white_spinner_gray"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detailed job description"
                            android:textColor="@color/text_headlins"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <EditText
                                    android:id="@+id/edt_job_desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/shape_white_edittext"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:gravity="top"
                                    android:hint="" >
                                </EditText>
                            </RelativeLayout>
                        </ScrollView>
                    </LinearLayout>

                    <!-- 5 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="9"
                        android:background="@drawable/shape_white_spinner_gray"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >

                            <!-- 4.1.1 -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" >

                                    <Button
                                        android:id="@+id/button1"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_margin="2dp"
                                         android:gravity="center"
                                        android:text="Job Notes"
                                        android:textColor="@color/text_white"
                                        android:background="@drawable/ic_communication_messenger" />
                                </RelativeLayout>
                            </LinearLayout>

                            <!-- 4.1.2 -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" >

                                    <Button
                                        android:id="@+id/button2"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_margin="2dp"
                                         android:gravity="center"
                                        android:text="Add New Notes"
                                         android:textColor="@color/text_white"
                                        android:background="@drawable/ic_communication_messenger" />
                                </RelativeLayout>
                            </LinearLayout>

                            <!-- 4.1.3 -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" >

                                    <Button
                                        android:id="@+id/button3"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                       android:text="View/Add Job Files"
                                        android:textColor="@color/text_white"
                                        android:background="@drawable/ic_communication_messenger" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 6 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="7"
                        android:background="@drawable/shape_white_spinner_gray"
                        android:orientation="vertical" >

                        <ListView
                            android:id="@+id/jobdetails_listview"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:background="#ffffff"
                            android:divider="#ffffff"
                            android:dividerHeight="5dp" >
                        </ListView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="9"
                        android:background="@drawable/shape_white_spinner_gray"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >

                            <!-- 4.1.1 -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" >

                                    <Button
                                        android:id="@+id/job_details_view_materials"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_margin="2dp"
                                        android:text="View Materials" />
                                </RelativeLayout>
                            </LinearLayout>

                            <!-- 4.1.2 -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" >

                                    <Button
                                        android:id="@+id/job_details_add_materials"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_margin="2dp"
                                        android:text="ADD Materials" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 7 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="7"
                        android:background="@drawable/shape_white_spinner_gray"
                        android:orientation="vertical" >

                        <ListView
                            android:id="@+id/jobdetails_material_listview"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:background="#ffffff"
                            android:divider="#ffffff"
                            android:dividerHeight="5dp" >
                        </ListView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>